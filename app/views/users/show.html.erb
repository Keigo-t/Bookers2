<!--ユーザー情報の部分テンプレート-->
<%= render 'books/user', user:@user %>

<div class="container">
  <div class="row">
    <div class="col-lg-8" style="background-color: white;">
       <h1>Books</h1>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
         </tbody>
      </table>
    </div>
  </div>
</div>

<!--新規投稿の部分テンプレート-->
<%= render 'books/new', book:@book %>